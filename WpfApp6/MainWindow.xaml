<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Guess The Number!" HorizontalAlignment="Left" Height="47" Margin="217,1,0,0" VerticalAlignment="Top" Width="437" FontSize="30" RenderTransformOrigin="0.567,0.374"
               FontFamily="Comic Sans MS"/>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="23" Margin="89,73,0,0" TextWrapping="Wrap" Text="Your Guess!" VerticalAlignment="Top" Width="120"/>
        <Label Content="Guess a number between 1 and 100!" HorizontalAlignment="Left" Margin="262,189,0,0" VerticalAlignment="Top" Width="204"/>
        <TextBox x:Name="Winner" HorizontalAlignment="Left" Height="195" Margin="97,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="643"  FontSize="100" FontFamily="Comic Sans MS" Visibility="Hidden"/>
        <Button x:Name="clicked" Content="Go!" HorizontalAlignment="Left" Height="39" Margin="263,85,0,0" VerticalAlignment="Top" Width="97" Click="clicked_Click"/>

    </Grid>
</Window>
